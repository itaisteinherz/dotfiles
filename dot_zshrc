# vi:ft=zsh
# Use zsh colors
autoload colors
colors

# Set up the prompt
fpath+=$HOME/.zsh/pure

autoload -U promptinit
promptinit
prompt pure

setopt histignorealldups sharehistory

# Use emacs keybindings even if our EDITOR is set to vi
bindkey -e

# Enable word navigation using ctrl+left/right arrow keys work
bindkey "^[[1;5D" backward-word
bindkey "^[[1;5C" forward-word
# Enable deleting the previous word using ctrl+backspace, and the next word using ctrl+delete
bindkey "^H" backward-kill-word
bindkey "5~" kill-word

# Keep 1000 lines of history within the shell and save it to $HOME/.zsh_history:
HISTSIZE=1000
SAVEHIST=1000
HISTFILE=$HOME/.zsh_history

# Disable annoying beeps
unsetopt BEEP

# Set up zplug (plugin system)
source ~/.zplug/init.zsh

## Plugins
zplug "zsh-users/zsh-autosuggestions"  # Suggests commands from history
zplug "zsh-users/zsh-completions"      # Enhanced command completions
zplug "junegunn/fzf", use:"shell/completion.zsh", defer:2  # fzf completion
zplug "junegunn/fzf", use:"shell/key-bindings.zsh"  # fzf key bindings (Ctrl+R, Ctrl+T)

## Install plugins if not present
if ! zplug check --verbose; then
printf "Install? [y/N]: "
if read -q; then
   echo; zplug install
fi
fi

## Load plugins
zplug load

# Completion settings
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'
zstyle ':completion:*' menu select
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ~/.zcompcache

# Shared configurations
source $HOME/.shared.sh

# Setup fzf
if [[ ! "$PATH" == *$HOME/.fzf/bin* ]]; then
  PATH="${PATH:+${PATH}:}$HOME/.fzf/bin"
fi

source <(fzf --zsh)

# Set up zoxide
eval "$(zoxide init zsh)"
